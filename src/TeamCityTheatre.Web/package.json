{
  "name": "teamcitytheatre",
  "version": "1.0.0",
  "description": "Monitor those builds!",
  "main": "index.js",
  "repository": "https://github.com/amoerie/teamcity-theatre",
  "author": "Alexander Moerman",
  "license": "MIT",
  "dependencies": {
    "date-fns": "^1.28.4",
    "inferno": "^3.1.2",
    "inferno-compat": "^3.1.2",
    "rxjs": "^5.4.0",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@types/node": "^8.0.2",
    "@types/react": "^15.0.24",
    "@types/react-dom": "^15.5.0",
    "postcss-cli": "^4.0.0",
    "postcss-nested": "^2.0.2",
    "rimraf": "^2.6.1",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  },
  "scripts": {
    "clean": "rimraf views/**/*.js views/**/*.js.map",
    "ts": "tsc --pretty",
    "js": "webpack --config=webpackconfig.js --progress --colors",
    "pcss": "postcss views/**/*.pcss --use postcss-nested --dir wwwroot/css --ext=.css --no-map true",
    "watch:ts": "npm run ts -- --watch",
    "watch:js": "npm run js -- --watch=true",
    "watch:pcss": "npm run pcss -- --watch=true",
    "build:debug": "npm run clean && npm run ts && npm run pcss && npm run js",
    "build:release": "npm run clean && npm run ts && npm run pcss && npm run js -- --env=production"
  }
}
